@model CoreMvc.Information.Information
<div class="col-md-4">
    <div class="panel panel-primary">
        <div class="panel-heading">
            <h3 class="panel-title">@Model.Name</h3>
        </div>
        <div class="panel-body">
            <p>@Model.Address</p>
            <p>@Model.Mobile</p>
            <p>
                 <a asp-action="Edit" class="btn btn-success" asp-route-id="@Model.Id" 
                 data-toggle="tooltip" data-placement="bottom" title="Edit the item">
                     <span class="glyphicon glyphicon-edit"></span>
                 </a>
                    <a asp-action="Details" class="btn btn-primary" asp-route-id="@Model.Id"
                    data-toggle="tooltip" data-placement="bottom" title="Edit the item">
                        <span class="glyphicon glyphicon-fullscreen"></span>
                    </a> 
                    <a asp-action="Delete" class="btn btn-danger" asp-route-id="@Model.Id"
                    data-toggle="tooltip" data-placement="bottom" title="Edit the item" 
                    new { onclick = "return checkDelete();" }> 
                        <span class="glyphicon glyphicon-trash"></span>
                    </a>
            </p>
        </div>
    </div>
</div>

